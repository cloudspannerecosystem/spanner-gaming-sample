on:
  push:
    branches:
      - dtest-issue33-fixreleasenotes

name: Test release notes

jobs:
  release:
    name: Create Release
    runs-on: 'ubuntu-latest'
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Release Notes
        run:
          git log $(git describe HEAD~ --tags --abbrev=0)..HEAD --pretty='format:* %h %s' --no-merges > ${{ github.workspace }}-CHANGELOG.md &&
          cat ${{ github.workspace }}-CHANGELOG.md

